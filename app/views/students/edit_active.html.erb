<h2>  <%= @student.first_name %> <%= @student.last_name %>'s' Activation</h2>
<form action="/students" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  Active: <input type="radio" name="active[]" value="<%= @student.id %>" <%= 'checked' if @student.active %>>
  Inactive: <input type="radio" name="active[]" value="<%= @student.id %>" <%= 'checked' if !@student.active %>>
  <br>
  <br>
  <input type="submit" value="submit" id="submit" name="submit">
</form>
